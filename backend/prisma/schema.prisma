// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(EMPLOYEE)
  employee  Employee?
}

model Employee {
  id           Int      @id @default(autoincrement())
  firstName    String
  lastName     String
  position     String
  employmentType EmploymentType
  userId       Int      @unique
  user         User     @relation(fields: [userId], references: [id])
  schedules    Schedule[]
  availabilities Availability[]
}

model ShiftType {
  id          Int      @id @default(autoincrement())
  name        String   // e.g., "Morning", "Afternoon", "Night"
  startTime   String   // e.g., "08:00"
  endTime     String   // e.g., "16:00"
  schedules   Schedule[]
}

model Schedule {
  id          Int       @id @default(autoincrement())
  date        DateTime
  employeeId  Int
  employee    Employee  @relation(fields: [employeeId], references: [id])
  shiftTypeId Int
  shiftType   ShiftType @relation(fields: [shiftTypeId], references: [id])
}

model Availability {
  id          Int       @id @default(autoincrement())
  employeeId  Int
  employee    Employee  @relation(fields: [employeeId], references: [id])
  dayOfWeek   Int       // 0 for Sunday, 1 for Monday, etc.
  isAvailable Boolean
  startTime   String?   // Optional: "HH:MM"
  endTime     String?   // Optional: "HH:MM"
}

enum Role {
  ADMIN
  MANAGER
  EMPLOYEE
}

enum EmploymentType {
  FULL_TIME // 40h/week
  THREE_QUARTERS // 30h/week
}